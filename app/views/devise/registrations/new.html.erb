<!DOCTYPE html>
<head>
<script>
document.addEventListener("DOMContentLoaded", function() {
  const classificationField = document.getElementById("user_classification");
  const shiftTypeFields = document.getElementById("shift-type-fields");

  function updateFields() {
    const classification = classificationField.value;
    shiftTypeFields.innerHTML = '';  // Clear previous fields

    if (classification === '社員') {
      shiftTypeFields.innerHTML = `
        <div class="field">
          <label for="user_shift_type">シフトタイプ</label><br />
          <select name="user[shift_type]" id="user_shift_type" class="content__main__box__field__select">
            <option value="早番: 9時~18時">早番: 9時~18時</option>
            <option value="遅番: 13時~22時">遅番: 13時~22時</option>
          </select>
        </div>`;
    } else if (classification === 'リーダー') {
      shiftTypeFields.innerHTML = `
        <div class="field">
          <label for="user_shift_type">シフトタイプ</label><br />
          <select name="user[shift_type]" id="user_shift_type" class="content__main__box__field__select">
            <option value="固定シフト">固定シフト</option>
          </select>
        </div>`;
    } else if (classification === 'パート・アルバイト') {
      shiftTypeFields.innerHTML = `
        <div class="field">
          <label for="user_start_time">希望の開始時間</label>
          <select name="user[start_time(4i)]" id="user_start_time_4i" class="content__main__box__field__select">
            ${generateTimeOptions()}
          </select>
          <select name="user[start_time(5i)]" id="user_start_time_5i" class="content__main__box__field__select">
            <option value="00">00</option>
            <option value="30">30</option>
          </select><br />
          <label for="user_end_time">希望の終了時間</label>
          <select name="user[end_time(4i)]" id="user_end_time_4i" class="content__main__box__field__select">
            ${generateTimeOptions()}
          </select>
          <select name="user[end_time(5i)]" id="user_end_time_5i" class="content__main__box__field__select">
            <option value="00">00</option>
            <option value="30">30</option>
          </select>
        </div>`;
    }
  }

  function generateTimeOptions() {
    let options = '';
    for (let i = 0; i < 24; i++) {
      options += `<option value="${i}">${i.toString().padStart(2, '0')}</option>`;
    }
    return options;
  }

  classificationField.addEventListener("change", updateFields);
  updateFields();
});
</script>
</head>
<div class="scrollable-form">
  <h2 class="title">新規登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: @user %>

    <div class="field">
      <%= f.label :name, "ユーザー名", for: "user_name" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", id: "user_name" %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス", for: "user_email" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "user_email" %>
    </div>

    <div class="field">
      <%= f.label :classification, "役職", for: "user_classification" %><br />
      <%= f.select :classification, options_for_select(["社員", "リーダー", "パート・アルバイト"]), id: "user_classification" %>
    </div>

    <div id="shift-type-fields">
      <% if @user.classification == "社員" %>
        <div class="field">
          <%= f.label :shift_type, "シフトタイプ", for: "user_shift_type" %><br />
          <%= f.select :shift_type, options_for_select(["早番: 9時~18時", "遅番: 13時~22時"]), id: "user_shift_type", class: 'content__main__box__field__select' %>
        </div>
      <% elsif @user.classification == "リーダー" %>
        <div class="field">
          <%= f.label :shift_type, "シフトタイプ", for: "user_shift_type" %><br />
          <%= f.select :shift_type, options_for_select(["固定シフト"]), id: "user_shift_type", class: 'content__main__box__field__select' %>
        </div>
      <% elsif @user.classification == "パート・アルバイト" %>
        <div class="field">
          <%= f.label :start_time, "希望の開始時間", for: "user_start_time_4i" %><br />
          <%= f.time_select :start_time, { minute_step: 30 }, default: { hour: 9, minute: 0 }, id: "user_start_time_4i", class: 'content__main__box__field__select' %>
          <%= f.select :start_time, { minute_step: 30 }, id: "user_start_time_5i", class: 'content__main__box__field__select' %>
          <%= f.label :end_time, "希望の終了時間", for: "user_end_time_4i" %><br />
          <%= f.time_select :end_time, { minute_step: 30 }, default: { hour: 22, minute: 0 }, id: "user_end_time_4i", class: 'content__main__box__field__select' %>
          <%= f.select :end_time, { minute_step: 30 }, id: "user_end_time_5i", class: 'content__main__box__field__select' %>
        </div>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード", for: "user_password" %><br />
      <%= f.password_field :password, autocomplete: "new-password", id: "user_password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "確認用パスワード", for: "user_password_confirmation" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "user_password_confirmation" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "large-button" %>
    </div>
  <% end %>
</div>

<div class="home">
  <%= link_to "ホーム", root_path %>
</div>
<%= render "devise/shared/links" %>
